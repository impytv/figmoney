<h1>Editing recurring transaction</h1>

<%= form_for :recurring_transaction, url: recurring_transaction_path(@recurring_transaction), method: :patch do |f| %>
    <p>
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label :date_from %><br>
      <%= f.date_field :date_from %><br>

      <%= f.label :date_to %><br>
      <%= f.date_field :date_to %>
    </p>

    <p>
      <%= f.label :recurrence %><br>

      <%= f.select(:recurrence_code, options_for_select(@recurrence_types_array, @recurring_transaction.recurrence_code)) %>
    </p>

    <p>
      <%= f.label :amount %><br>
      <%= f.number_field :amount %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', controller: 'recurring_transactions' %>
